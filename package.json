{
    "name": "rater-app",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@testing-library/jest-dom": "^6.4.8",
        "@testing-library/react": "^16.0.0",
        "@testing-library/user-event": "^13.5.0",
        "@types/node": "^16.18.104",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-router": "^6.26.0",
        "react-router-dom": "^6.26.0",
        "react-scripts": "5.0.1",
        "typescript": "^4.9.5",
        "web-vitals": "^2.1.4"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "npm run prettier:write && npm run test && react-scripts build",
        "test": "jest --detectOpenHandles",
        "test:watch": "jest --watch",
        "eject": "react-scripts eject",
        "prettier:write": "npx prettier --write 'src/*/**'"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
        "@babel/preset-env": "^7.25.3",
        "@babel/preset-react": "^7.24.7",
        "@babel/preset-typescript": "^7.24.7",
        "@eslint/js": "^8.57.0",
        "@types/jest": "^29.5.12",
        "@types/testing-library__jest-dom": "^5.14.9",
        "babel-jest": "^29.7.0",
        "eslint": "^8.57.0",
        "eslint-config-react-app": "^7.0.1",
        "globals": "^15.9.0",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "jest-transform-css": "^6.0.1",
        "prettier": "3.3.3",
        "styled-components": "^6.1.12",
        "swiper": "^9.4.1",
        "ts-jest": "^29.2.4",
        "zustand": "^4.5.4"
    },
    "resolutions": {
        "styled-components": "^5"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "setupFilesAfterEnv": [
            "<rootDir>/src/setupTests.ts"
        ],
        "preset": "ts-jest",
        "transform": {
            "^.+\\.tsx?$": "ts-jest",
            "^.+\\.jsx?$": "babel-jest",
            "^.+\\.css$": "jest-transform-css"
        },
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "moduleNameMapper": {
            "^swiper/react$": "<rootDir>/node_modules/swiper/types/index.d.ts",
            "^swiper/shared$": "<rootDir>/node_modules/swiper/types/shared.d.ts",
            "^swiper/modules$": "<rootDir>/node_modules/swiper/types/modules/index.d.ts",
            "swiper/css": "<rootDir>/node_modules/swiper/swiper.min.css"
        },
        "transformIgnorePatterns": [
            "/node_modules/(?!swiper|ssr-window|dom7)"
        ],
        "verbose": true
    }
}
